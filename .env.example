# HODLXXI Configuration Example
# Copy this file to .env and customize for your environment

# Flask Configuration
FLASK_ENV=development
FLASK_DEBUG=1
FLASK_SECRET_KEY=change-this-to-a-random-secret-key-in-production

# Bitcoin Core RPC Configuration
RPC_HOST=127.0.0.1
RPC_PORT=8332
RPC_USER=bitcoinrpc
RPC_PASSWORD=change-me
RPC_WALLET=

# JWT Configuration
JWT_SECRET=dev-secret-CHANGE-ME-IN-PRODUCTION
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# LNURL Configuration
LNURL_BASE_URL=http://localhost:5000

# TURN Server (for WebRTC)
TURN_HOST=turn.example.com
TURN_PORT=3478
TURN_USER=user
TURN_PASS=pass

# CORS Configuration
CORS_ORIGINS=*
SOCKETIO_CORS=*

# Rate Limiting (not yet implemented)
RATE_LIMIT_ENABLED=false
RATE_LIMIT_DEFAULT=100/hour

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# Database (for future use - currently using in-memory)
DATABASE_URL=

# Redis (for future use - currently using in-memory)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Session Configuration
SESSION_LIFETIME_HOURS=24

# Security Configuration
SECURE_COOKIES=false
CSRF_ENABLED=false

# Application Settings
APP_NAME=HODLXXI
APP_VERSION=1.0.0-alpha
APP_HOST=0.0.0.0
APP_PORT=5000

# Optional: Guest/Special User Configuration
GUEST_PUBKEY=
GUEST_PRIVKEY=
GUEST2_PUBKEY=
GUEST2_PRIVKEY=
SPECIAL_USERS=

# Optional: Force relay for WebRTC
FORCE_RELAY=false
